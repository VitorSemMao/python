def fibonacci(n):
   if n <=0:
       return "o valor de 'n' deve ser maior que zero"
   elif n == 1:
       return 0
   elif n == 2:
       return 1
   else:
        return fibonacci(n - 1) + fibonacci(n - 2)
n = int(input( "digite o termo de fibonacci desejado: "))
resultado = fibonacci(n)
print(f"o {n} numero na sequencia de fibonacci Ã© {resultado} ")
